# NPM Configuration for LearnMe
# This file ensures consistent behavior across all contributors

# Use exact versions when installing
save-exact=true

# Set registry (use default npm registry)
registry=https://registry.npmjs.org/

# Engine strict - fail if Node.js version doesn't match
engine-strict=true

# Automatically install peer dependencies
legacy-peer-deps=false

# Audit level
audit-level=moderate

# Update notifier
update-notifier=true

